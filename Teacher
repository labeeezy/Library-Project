public void checkout(Library library){
if(takenbooks < 2)
 library.changeBook(isbn, bookname);
 takenbooks++;
 System.out.println("You have checked out" + bookname + "It is due in one weeks.");
}

public void returnBook(Library library){
 library.changeBook(isbn, bookname, false);
 takenbooks--;
 System.out.println("You have returned" + bookname + "Thanks!);
}
