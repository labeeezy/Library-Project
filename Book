
public class Book{

	private boolean borrowedState;	
	private Borrower borrowHistory;
	private int isbn;
	private String title, author, category, status;
	
	public Book(int id, String t, String a, String c, String s, boolean bS, Borrower bH){
		this.isbn = id;
		this.title = t;
		this.author = a;
		this.category = c;
		this.status = s;
		this.borrowedState = bS;
		this.borrowHistory = bH;
	}
	
	public String toString(){
		return "ISBN ID: \"" + isbn + "\", Title: \"" + title +
				"\", Author: \"" + author + "\", Category: \"" + category + "\", Status: \"" + status + "\"";
	}

}
